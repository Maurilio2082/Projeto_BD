[
  {
    "$lookup": {
      "from": "especialidades",
      "localField": "especialidadeId",
      "foreignField": "_id",
      "as": "especialidadeInfo"
    }
  },
  {
    "$group": {
      "_id": "$especialidadeId",
      "nomeEspecialidade": { "$first": "$especialidadeInfo.nome" },
      "quantidadeMedicos": { "$sum": 1 }
    }
  },
  {
    "$sort": { "nomeEspecialidade": 1 }
  }
]
